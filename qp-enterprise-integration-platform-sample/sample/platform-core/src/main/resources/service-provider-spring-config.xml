<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
">

	<bean id="ComSamplesPlatformUserProvider" class="com.samples.platform.core.security.UserProvider" init-method="createUsers"/>

	<bean class="com.qpark.eip.core.logback.LoggingInitializer" />
	<bean class="com.samples.platform.core.WebAppInitialiser" />

	<!-- SOAP 1.2 message factory -->
	<bean id="soap12MessageFactory" class="org.springframework.ws.soap.saaj.SaajSoapMessageFactory">
		<description>A message factory to support SOAP 1.2</description>
		<property name="soapVersion">
			<util:constant static-field="org.springframework.ws.soap.SoapVersion.SOAP_12" />
		</property>
	</bean>

	<!-- SOAP 1.1 message factory
	<bean id="soap11MessageFactory" class="org.springframework.ws.soap.saaj.SaajSoapMessageFactory">
		<description>A message factory to support SOAP 1.1</description>
		<property name="soapVersion">
			<util:constant static-field="org.springframework.ws.soap.SoapVersion.SOAP_11" />
		</property>
	</bean>
	-->

	<bean class="com.qpark.eip.core.spring.statistics.config.EipStatisticsConfig">
		<property name="contextName" value="${eip.application.maven.artifact.artifactid}"/>
		<property name="contextVersion" value="${eip.application.maven.artifact.version}"/>
		<property name="messageContentProviderClassName" value="com.samples.platform.core.SamplesMessageContentProvider"/>
		<property name="jpaVendorAdapterClassName" value="${com.samples.platform.jpa.vendor.adapter.class.name}"/>
		<property name="jpaVendorAdpaterDatabasePlatform" value="${com.samples.platform.jpa.vendor.adapter.database.platform}"/>
		<property name="dataSourceJndiName" value="${com.samples.platform.jndi.datasource.name}"/>
	</bean>

	<bean class="com.samples.platform.persistenceconfig.PersistenceConfig">
		<property name="jpaVendorAdapterClassName" value="${com.samples.platform.jpa.vendor.adapter.class.name}"/>
		<property name="jpaVendorAdpaterDatabasePlatform" value="${com.samples.platform.jpa.vendor.adapter.database.platform}"/>
	</bean>
</beans>