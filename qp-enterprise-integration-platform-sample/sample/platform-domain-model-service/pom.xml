	<parent>
		<groupId>com.samples.platform</groupId>
		<artifactId>platform-base</artifactId>
		<version>3.4.0</version><!--qpark-eip-version-->
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>platform-domain-model-service</artifactId>
	<packaging>jar</packaging>
	<name>platform-domain-model-service</name>
	<description>Overwrites jaxb generated classes with persistence classes, generates persistence.xml and DDL as well as operation provider classes.</description>

	<properties>
		<model.dir>${project.build.directory}/model</model.dir>
		<java.gen.dir>${project.build.directory}/generated-sources</java.gen.dir>
	</properties>

	<build>
		<sourceDirectory>${java.gen.dir}</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-sources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${domain.groupId}</groupId>
									<artifactId>model</artifactId>
									<version>3.4.0</version><!--qpark-eip-version-->
									<outputDirectory>${model.dir}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>${domain.groupId}</groupId>
									<artifactId>service</artifactId>
									<version>3.4.0</version><!--qpark-eip-version-->
									<outputDirectory>${model.dir}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>unpack-classes</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${domain.groupId}.gen</groupId>
									<artifactId>domain-gen-jaxb</artifactId>
									<version>3.4.0</version><!--qpark-eip-version-->
									<outputDirectory>${project.build.directory}/classes</outputDirectory>
								</artifactItem>
								<!-- The following to have the sources of the jaxb classes visible with this artefact -->
								<artifactItem>
									<groupId>${domain.groupId}.gen</groupId>
									<artifactId>domain-gen-jaxb</artifactId>
									<version>3.4.0</version><!--qpark-eip-version-->
									<classifier>generated-java-sources</classifier>
									<outputDirectory>${java.gen.dir}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>platform-domain-model-persistence</artifactId>
									<version>${platform.version}</version>
									<outputDirectory>${project.build.directory}/classes</outputDirectory>
								</artifactItem>
								<!-- The following to have the sources of the jaxb classes visible with this artefact -->
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>platform-domain-model-persistence</artifactId>
									<version>${platform.version}</version>
									<classifier>sources</classifier>
									<outputDirectory>${java.gen.dir}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.qpark.maven</groupId>
				<artifactId>eip-generator-plugin</artifactId>
				<executions>
					<execution>
						<id>generate spring-integration gateways and spring-integration configs</id>
						<phase>process-resources</phase>
						<goals>
							<goal>generate-integration</goal>
						</goals>
						<configuration>
							<baseDirectory>${model.dir}</baseDirectory>
							<basePackageName>${base.package.name}</basePackageName>
						</configuration>
					</execution>
					<execution>
						<id>generate persistence config</id>
						<phase>process-resources</phase>
						<goals>
							<goal>generate-persistence-config</goal>
						</goals>
						<configuration>
							<basePackageName>${base.package.name}</basePackageName>
							<persistenceUnitName>${persistence.unit.name}</persistenceUnitName>
							<datasourceJndiName>${persistence.jndi.datasource.name}</datasourceJndiName>
							<springJpaVendorAdapter>${persistence.jpa.vendor.adapter}</springJpaVendorAdapter>
							<databasePlatform>${persistence.jpa.vendor.adapter.databasePlatform}</databasePlatform>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>copy META-INF</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<mkdir dir="${project.build.directory}/classes/META-INF"/>
								<mkdir dir="${java.gen.dir}/META-INF"/>
								<copy todir="${project.build.directory}/classes/META-INF">
									<fileset dir="${java.gen.dir}/META-INF" />
								</copy>
								<copy todir="${project.build.directory}/classes">
									<fileset dir="${java.gen.dir}" >
										<include name="**/*.xml"/>
									</fileset>
								</copy>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>catalog.cat</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>platform-domain-model-persistence</artifactId>
			<version>3.4.0</version><!--qpark-eip-version-->
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${domain.groupId}.gen</groupId>
			<artifactId>domain-gen-jaxb</artifactId>
			<version>3.4.0</version><!--qpark-eip-version-->
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.qpark.eip.core</groupId>
			<artifactId>eip-core-persistence</artifactId>
		</dependency>
		<dependency>
			<groupId>com.springsource.insight</groupId>
			<artifactId>insight-annotation</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-orm</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jvnet.hyperjaxb3</groupId>
			<artifactId>hyperjaxb3-ejb-runtime</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>javax.persistence</artifactId>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>eclipselink</artifactId>
			<version>2.5.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>